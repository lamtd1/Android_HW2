<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style cơ bản cho tất cả các nút máy tính -->
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!-- Style cho các nút số -->
    <style name="CalculatorButton.Number" parent="CalculatorButton">
        <item name="android:backgroundTint">#F5F5F5</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Style cho các nút chức năng (CE, C, BS) -->
    <style name="CalculatorButton.Function" parent="CalculatorButton">
        <item name="android:backgroundTint">#E0E0E0</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Style cho các nút toán tử -->
    <style name="CalculatorButton.Operator" parent="CalculatorButton">
        <item name="android:backgroundTint">#FF9800</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
    